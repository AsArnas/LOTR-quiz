<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
            android:layout_width="wrap_content"
            android:id="@+id/question1_text_view"
            android:layout_height="wrap_content"
            android:text="Name that character!"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question1.2_text_view"
                android:text="“Nine companions. So be it. You shall be the fellowship of the ring.” "
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/question1_text_view"
                android:padding="15dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question1.2_text_view"
                android:gravity="center_horizontal"
                >


            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/question1_image_view"
                android:src="@drawable/question1"


                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/radio_answer_1"
                android:layout_toRightOf="@+id/question1_image_view"
                android:text="Elrond"


                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/radio_answer_2"
                android:layout_toRightOf="@+id/question1_image_view"
                android:layout_below="@+id/radio_answer_1"
                android:text="Gendalf"


                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/radio_answer_3"
                android:layout_toRightOf="@+id/question1_image_view"
                android:layout_below="@+id/radio_answer_2"
                android:text="Aragorn"


                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/radio_answer_4"
                android:layout_toRightOf="@+id/question1_image_view"
                android:layout_below="@+id/radio_answer_3"
                android:text="Celeborn"


                />
            </RelativeLayout>



        </LinearLayout>













    </LinearLayout>







</ScrollView>